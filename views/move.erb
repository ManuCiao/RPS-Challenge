
<div class="intro">
  <h1>You chose <%= @game.player_move.to_s.capitalize %>!</h1><br>
  <h1>Computer chose <%= @game.pc_move.to_s.capitalize %>!</h1>
</div><br>

<div class="outcome">
  <% if @game.draw? %>
    <h1><%= @game.player.name %>, You draw!</h1>
  <% elsif @game.win? %>
    <h1><%= @game.player.name %>, You win!<h1>
  <% elsif @game.lose? %>
    <h1><%= @game.player.name %>, You lose!</h1>
  <% end %>
</div><br>

<div>
  <form action="/play">
      <input class="button" type="submit" value="Play Again">
  </form>
</div>

<div>
  <footer>Made by Manuela Sabatino</footer>
</div>

